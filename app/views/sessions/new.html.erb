<h1 class="display-4 text-center mt-4">Are you a Charity? Log In here</h1>

<div class="container">
  
  <div class="row d-flex justify-content-center">
    <div class="col-10">
      <% if @admin.errors.any? %>
      <h2>The following errors prevented the admin from being saved:</h2>
        <ul>
          <% @admin.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>      
      <%= form_with(scope: :session, local: true, url: login_path, class:"shadow p-3 mb-3 bg-secondary rounded") do |f|%>
        <div class="form-group row mt-4">
          <%= f.label :email, class:"col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, class:"form-control shadow rounded", placeholder: "Enter your Email Address" %>
          </div>
        </div>

        <div class="form-group row mt-4">
            <%= f.label :password, class:"col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.password_field :password_digest, class:"form-control shadow rounded", placeholder: "Password" %>
            </div>
          </div>

      
          <div class="form-group row mt-4">
            <%= f.submit "Log In", class:"btn btn-outline-light btn-lg" %>
          </div>
        </div>
      
      <% end %>
    </div>

</div>